# Aether â€” Environment Variables
# Copy to .env and fill in your keys:  cp .env.example .env

# --- Required ---
OPENAI_API_KEY=sk-...
DEEPGRAM_API_KEY=...

# --- Optional providers ---
ELEVENLABS_API_KEY=
SARVAM_API_KEY=

# --- Config ---
AETHER_DB_PATH=aether_memory.db
AETHER_TTS_PROVIDER=openai
AETHER_LLM_PROVIDER=openai
AETHER_STT_PROVIDER=deepgram

# --- Infrastructure (defaults work for docker-compose) ---
POSTGRES_PASSWORD=aether_dev
NEXT_PUBLIC_ORCHESTRATOR_URL=http://localhost:9000

# --- Better Auth ---
# Secret for session encryption (min 32 chars). Generate: openssl rand -base64 32
BETTER_AUTH_SECRET=change_me_in_production_use_openssl_rand
BETTER_AUTH_URL=http://localhost:3000

# --- Multi-user mode (production) ---
# Set to true to enable per-user agent containers via Docker SDK.
# When false (default), a single shared agent is used (dev mode).
MULTI_USER_MODE=false
AGENT_IMAGE=core-ai-agent:latest
AGENT_NETWORK=core-ai_default
AGENT_IDLE_TIMEOUT=30
