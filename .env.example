# Aether — Environment Variables
# Copy to .env and fill in your keys:  cp .env.example .env

# --- Required ---
OPENAI_API_KEY=sk-...
DEEPGRAM_API_KEY=...

# --- Optional providers ---
ELEVENLABS_API_KEY=
SARVAM_API_KEY=

# --- Config (defaults — overridden per-user via dashboard Agent page) ---
AETHER_DB_PATH=aether_memory.db
AETHER_STT_PROVIDER=deepgram
AETHER_STT_MODEL=nova-3
AETHER_LLM_PROVIDER=openai
AETHER_LLM_MODEL=gpt-4o
AETHER_TTS_PROVIDER=openai
AETHER_TTS_MODEL=tts-1
AETHER_TTS_VOICE=nova

# --- Personality (defaults — overridden per-user via dashboard Agent page) ---
# Styles: default, concise, detailed, friendly, professional
AETHER_BASE_STYLE=default
AETHER_CUSTOM_INSTRUCTIONS=

# --- Infrastructure ---
POSTGRES_PASSWORD=aether_dev

# --- Domain ---
# Dev: localhost:3000 (Caddy serves HTTP on port 3000)
# Prod: your domain (Caddy auto-provisions HTTPS via Let's Encrypt)
DOMAIN=localhost:3000

# --- Orchestrator URL ---
# Leave empty when using Caddy reverse proxy (same origin).
# Only set this for direct access without Caddy (e.g. mobile app dev).
NEXT_PUBLIC_ORCHESTRATOR_URL=

# --- Agent Registration Secret ---
# Shared secret between orchestrator and agent containers.
# Prevents unauthorized agent registration. Generate: openssl rand -hex 32
AGENT_SECRET=dev_agent_secret_change_in_production

# --- Better Auth ---
# Secret for session encryption (min 32 chars). Generate: openssl rand -base64 32
BETTER_AUTH_SECRET=change_me_in_production_use_openssl_rand
BETTER_AUTH_URL=http://localhost:3000
# Additional trusted origins (comma-separated). For OrbStack, tunnels, custom domains.
# BETTER_AUTH_TRUSTED_ORIGINS=https://dashboard.core-ai.orb.local

# --- Google OAuth2 (for Gmail plugin) ---
# Create credentials at https://console.cloud.google.com/apis/credentials
# Type: Web application
# Authorized redirect URI: http://localhost:3000/api/plugins/gmail/oauth/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --- Spotify OAuth2 (for Spotify plugin) ---
# Create app at https://developer.spotify.com/dashboard
# Redirect URI: http://localhost:3000/api/plugins/spotify/oauth/callback
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# --- Agent containers ---
AGENT_IMAGE=core-ai-agent:latest
AGENT_NETWORK=core-ai_default
AGENT_IDLE_TIMEOUT=30
